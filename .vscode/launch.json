    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch built-in server and Debug",
            "type": "php",
            "request": "launch",
            "noDebug": false,
            "runtimeExecutable": "C:\\dev-tools\\php74\\php.exe",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "."
            ],
            "cwd": "${workspaceRoot}/public",
            "serverReadyAction": {
                "action": "openExternally"
            },
            "envFile": "../.env"
        },
        {
            "name": "Launch built-in server and Profile",
            "type": "php",
            "request": "launch",
            "noDebug": true,
            "runtimeExecutable": "C:\\dev-tools\\php74\\php.exe",
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "."
            ],
            "cwd": "${workspaceRoot}/public",
            "serverReadyAction": {
                "action": "openExternally"
            },
            "envFile": "../.env",
            "profile": true,
            "openProfile": true
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "runtimeExecutable": "C:\\dev-tools\\php74\\php.exe",
            "port": 9003,
            "pathMappings": {
                "${workspaceRoot}": "${workspaceRoot}"
            }
        },
        {
            "name": "Debug Test Saldos Favor",
            "type": "php",
            "request": "launch",
            "runtimeExecutable": "C:\\dev-tools\\php74\\php.exe",
            "program": "${workspaceRoot}/test_saldos_favor.php",
            "cwd": "${workspaceRoot}",
            "port": 9003,
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes"
            ]
        }
    ]
}